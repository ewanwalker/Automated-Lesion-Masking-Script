# ==============================
# Global Paths Configuration
# ==============================

# FSL
export FSLDIR=/usr/local/fsl
export PATH=$FSLDIR/bin:$PATH
. ${FSLDIR}/etc/fslconf/fsl.sh

# FreeSurfer
export FREESURFER_HOME=/usr/local/freesurfer
export PATH=$FREESURFER_HOME/bin:$PATH
. $FREESURFER_HOME/SetUpFreeSurfer.sh

# AFNI
export AFNI_HOME=/usr/local/afni
export PATH=$AFNI_HOME:$PATH

# ANTs
export ANTSPATH=/usr/local/ants/bin
export PATH=$ANTSPATH:$PATH

# MRtrix3
export MRTRIX_HOME=/usr/local/mrtrix3
export PATH=$MRTRIX_HOME/bin:$PATH

# Project directories
export PROJECT_ROOT=/data/neuro-pipeline
export RAW_DATA=$PROJECT_ROOT/data
export DERIVATIVES=$PROJECT_ROOT/derivatives
export LOG_DIR=$DERIVATIVES/logs
